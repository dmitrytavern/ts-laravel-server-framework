{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "sourceMap": false,
    "esModuleInterop": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "allowJs": true,
    "strict": true,
    "target": "ES2018",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "paths": {
      "@app/*": ["app/*"],
      "@vendor/*": ["vendor/*"],
      "@routes/*": ["routes/*"],
      "@database/*": ["database/*"]
    }
  }
}