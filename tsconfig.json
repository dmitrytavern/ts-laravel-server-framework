{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowJs": true,
    // "strict": true,
    "target": "ES2018",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "paths": {
      "@app/*": ["app/*"],
      "@vendor/*": ["vendor/*"],
      "@routes/*": ["routes/*"],
      "@database/*": ["database/*"]
    }
  }
}